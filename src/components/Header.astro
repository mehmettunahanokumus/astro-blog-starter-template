---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="logo">
			<a href="/" class="logo-link">{SITE_TITLE}</a>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://www.linkedin.com/in/mehmettunahanokumus" target="_blank" rel="noopener noreferrer">
				<span class="sr-only">Visit my LinkedIn profile</span>
				<!-- LinkedIn SVG icon -->
				<svg viewBox="0 0 24 24" aria-hidden="true" width="20" height="20">
					<path fill="currentColor" d="M4.98 3.5C4.98 4.88 3.88 6 2.5 6S0 4.88 0 3.5 1.1 1 2.5 1 4.98 2.12 4.98 3.5zM0 8h5v16H0V8zm7.5 0H12v2.2h.1c.6-1.1 2.2-2.2 4.6-2.2 4.9 0 5.8 3.2 5.8 7.3V24h-5v-6.7c0-1.6 0-3.7-2.2-3.7-2.2 0-2.6 1.8-2.6 3.6V24h-5V8z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		position: sticky;
		top: 0;
		z-index: 100;
		background: var(--background);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--border);
		transition: var(--transition);
	}
	
	.logo {
		margin: 0;
	}

	.logo-link {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--text-primary);
		text-decoration: none;
		letter-spacing: -0.025em;
	}
	
	.logo-link:hover {
		color: var(--accent);
		text-decoration: none;
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 2rem;
		max-width: 1200px;
		margin: 0 auto;
	}
	
	nav a {
		padding: 0.5rem 1rem;
		color: var(--text-secondary);
		text-decoration: none;
		border-radius: var(--radius);
		transition: var(--transition);
		font-weight: 500;
	}
	
	nav a.active {
		color: var(--accent);
		background: var(--background-secondary);
	}
	
	nav a:hover {
		color: var(--accent);
		background: var(--background-secondary);
		text-decoration: none;
	}
	
	.internal-links {
		display: flex;
		gap: 0.5rem;
	}
	
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	
	.social-links a {
		padding: 0.5rem;
		border-radius: 50%;
		color: var(--text-tertiary);
		transition: var(--transition);
	}
	
	.social-links a:hover {
		color: var(--accent);
		background: var(--background-secondary);
		transform: translateY(-2px);
	}
	
	@media (max-width: 768px) {
		nav {
			padding: 1rem;
			flex-wrap: wrap;
			gap: 1rem;
		}
		
		.internal-links {
			order: 3;
			width: 100%;
			justify-content: center;
			padding-top: 1rem;
			border-top: 1px solid var(--border);
		}
		
		.social-links {
			gap: 0.5rem;
		}
		
		.logo-link {
			font-size: 1.25rem;
		}
	}
</style>
